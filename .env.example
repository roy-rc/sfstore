# ==========================================
# SFStore - Environment Configuration Template
# ==========================================
# Copy this file to .env and configure your local settings

###> symfony/framework-bundle ###
APP_ENV=dev
APP_SECRET=change_me_to_a_random_secret_string_for_production
###< symfony/framework-bundle ###

###> symfony/routing ###
# Configure how to generate URLs in non-HTTP contexts, such as CLI commands.
# See https://symfony.com/doc/current/routing.html#generating-urls-in-commands
DEFAULT_URI=http://localhost
###< symfony/routing ###

###> doctrine/doctrine-bundle ###
# Database Configuration
# Replace with your actual database credentials
# Format: DATABASE_URL="mysql://user:password@127.0.0.1:3306/database_name?serverVersion=8.0&charset=utf8mb4"

# MySQL (recommended for production)
DATABASE_URL="mysql://root:@127.0.0.1:3306/sfstore?serverVersion=8.0&charset=utf8mb4"

# MariaDB alternative
# DATABASE_URL="mysql://root:password@127.0.0.1:3306/sfstore?serverVersion=10.11.2-MariaDB&charset=utf8mb4"

# PostgreSQL alternative  
# DATABASE_URL="postgresql://user:password@127.0.0.1:5432/sfstore?serverVersion=16&charset=utf8"

# SQLite for development only
# DATABASE_URL="sqlite:///%kernel.project_dir%/var/data.db"
###< doctrine/doctrine-bundle ###

# ==========================================
# SFStore Specific Configuration
# ==========================================

# Application Settings
STORE_NAME="SFStore"
STORE_EMAIL="admin@sfstore.com" 
STORE_PHONE="+1234567890"

# Admin Default Credentials (change in production!)
ADMIN_EMAIL="admin@sfstore.com"
ADMIN_PASSWORD="admin123"

# Upload Settings
MAX_FILE_SIZE=5M
ALLOWED_IMAGE_EXTENSIONS="jpg,jpeg,png,gif,webp"

# Email Configuration (configure for production)
# MAILER_DSN=smtp://localhost:25
# MAILER_DSN=gmail://username:password@default
# MAILER_DSN=sendgrid://KEY@default

# Payment Gateway Configuration (add your keys)
# STRIPE_SECRET_KEY=sk_test_...
# STRIPE_PUBLISHABLE_KEY=pk_test_...
# PAYPAL_CLIENT_ID=your_paypal_client_id
# PAYPAL_CLIENT_SECRET=your_paypal_client_secret

# Cache Configuration  
# REDIS_URL=redis://localhost:6379
# MEMCACHED_URL=memcached://localhost:11211

# Security Settings
# JWT_SECRET_KEY=%kernel.project_dir%/config/jwt/private.pem
# JWT_PUBLIC_KEY=%kernel.project_dir%/config/jwt/public.pem