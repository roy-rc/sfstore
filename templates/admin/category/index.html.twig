{% extends 'admin/base.html.twig' %}

{% block title %}Gestión de Categorías{% endblock %}

{% block page_title %}
    <i class="fas fa-tags me-2"></i>Gestión de Categorías
{% endblock %}

{% block body %}
<div class="row mb-4">
    <div class="col-md-8">
        <h4 class="mb-0">Lista de Categorías</h4>
        <p class="text-muted">Administra las categorías de productos de tu tienda</p>
    </div>
    <div class="col-md-4 text-md-end">
        <a href="{{ path('admin_categories_new') }}" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>Nueva Categoría
        </a>
    </div>
</div>

<!-- Statistics Cards -->
<div class="row mb-4">
    <div class="col-md-3">
        <div class="card bg-primary text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4 class="mb-0">{{ categories|length }}</h4>
                        <p class="mb-0">Total Categorías</p>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-tags fa-2x opacity-75"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-success text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4 class="mb-0">{{ categories|filter(c => c.products|length > 0)|length }}</h4>
                        <p class="mb-0">Con Productos</p>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-check-circle fa-2x opacity-75"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-warning text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4 class="mb-0">{{ categories|filter(c => c.products|length == 0)|length }}</h4>
                        <p class="mb-0">Sin Productos</p>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-exclamation-triangle fa-2x opacity-75"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-info text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        {% set total_products = 0 %}
                        {% for category in categories %}
                            {% set total_products = total_products + category.products|length %}
                        {% endfor %}
                        <h4 class="mb-0">{{ total_products }}</h4>
                        <p class="mb-0">Total Productos</p>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-box fa-2x opacity-75"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Categories Table -->
<div class="card shadow-sm">
    <div class="card-header bg-light">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h5 class="mb-0">Listado de Categorías</h5>
            </div>
            <div class="col-md-6">
                <div class="input-group">
                    <span class="input-group-text">
                        <i class="fas fa-search"></i>
                    </span>
                    <input type="text" class="form-control" placeholder="Buscar categorías..." id="searchInput">
                </div>
            </div>
        </div>
    </div>
    
    <div class="card-body p-0">
        {% if categories|length > 0 %}
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th width="50">#</th>
                            <th>Nombre</th>
                            <th>Descripción</th>
                            <th class="text-center">Productos</th>
                            <th>Creado</th>
                            <th width="150" class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody id="categoriesTable">
                        {% for category in categories %}
                            <tr data-category-name="{{ category.name|lower }}">
                                <td class="align-middle">
                                    <span class="badge bg-primary">{{ category.id }}</span>
                                </td>
                                <td class="align-middle">
                                    <div class="d-flex align-items-center">
                                        <div class="bg-primary rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 40px; height: 40px;">
                                            <i class="fas fa-tag text-white"></i>
                                        </div>
                                        <div>
                                            <h6 class="mb-0">{{ category.name }}</h6>
                                            <small class="text-muted">Slug: {{ category.slug }}</small>
                                        </div>
                                    </div>
                                </td>
                                <td class="align-middle">
                                    {% if category.description %}
                                        <span class="text-muted">{{ category.description|length > 50 ? category.description|slice(0, 50) ~ '...' : category.description }}</span>
                                    {% else %}
                                        <span class="text-muted font-italic">Sin descripción</span>
                                    {% endif %}
                                </td>
                                <td class="align-middle text-center">
                                    {% if category.products|length > 0 %}
                                        <span class="badge bg-success">{{ category.products|length }}</span>
                                    {% else %}
                                        <span class="badge bg-secondary">0</span>
                                    {% endif %}
                                </td>
                                <td class="align-middle">
                                    <small class="text-muted">
                                        {{ category.createdAt ? category.createdAt|date('d/m/Y H:i') : 'N/A' }}
                                    </small>
                                </td>
                                <td class="align-middle text-center">
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a href="{{ path('category_show', {'slug': category.slug}) }}" 
                                           class="btn btn-outline-info" 
                                           target="_blank"
                                           data-bs-toggle="tooltip" 
                                           title="Ver en tienda">
                                            <i class="fas fa-external-link-alt"></i>
                                        </a>
                                        <a href="{{ path('admin_categories_edit', {'id': category.id}) }}" 
                                           class="btn btn-outline-primary"
                                           data-bs-toggle="tooltip" 
                                           title="Editar">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <button type="button" 
                                                class="btn btn-outline-danger" 
                                                data-bs-toggle="modal" 
                                                data-bs-target="#deleteModal{{ category.id }}"
                                                data-bs-toggle="tooltip" 
                                                title="Eliminar">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>

                            <!-- Delete Modal for each category -->
                            <div class="modal fade" id="deleteModal{{ category.id }}" tabindex="-1">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title">Confirmar Eliminación</h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                        </div>
                                        <div class="modal-body">
                                            <p>¿Estás seguro de que deseas eliminar la categoría <strong>"{{ category.name }}"</strong>?</p>
                                            {% if category.products|length > 0 %}
                                                <div class="alert alert-warning">
                                                    <i class="fas fa-exclamation-triangle me-2"></i>
                                                    Esta categoría tiene <strong>{{ category.products|length }} producto(s)</strong> asociado(s). 
                                                    Al eliminarla, estos productos perderán esta categoría.
                                                </div>
                                            {% endif %}
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                                            <form method="post" action="{{ path('admin_categories_delete', {'id': category.id}) }}" class="d-inline">
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.id) }}">
                                                <button type="submit" class="btn btn-danger">
                                                    <i class="fas fa-trash me-2"></i>Eliminar
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        {% else %}
            <div class="text-center py-5">
                <i class="fas fa-tags fa-5x text-muted mb-4"></i>
                <h4>No hay categorías creadas</h4>
                <p class="text-muted mb-4">Comienza creando tu primera categoría de productos</p>
                <a href="{{ path('admin_categories_new') }}" class="btn btn-primary">
                    <i class="fas fa-plus me-2"></i>Crear Primera Categoría
                </a>
            </div>
        {% endif %}
    </div>
</div>

<!-- Quick Actions -->
<div class="row mt-4">
    <div class="col-md-6">
        <div class="card border-primary">
            <div class="card-body">
                <h5 class="card-title text-primary">
                    <i class="fas fa-lightbulb me-2"></i>Consejos
                </h5>
                <ul class="mb-0">
                    <li>Usa nombres descriptivos para tus categorías</li>
                    <li>Agrupa productos similares para facilitar la navegación</li>
                    <li>Las categorías sin productos no aparecen en la tienda</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card border-success">
            <div class="card-body">
                <h5 class="card-title text-success">
                    <i class="fas fa-tools me-2"></i>Acciones Rápidas
                </h5>
                <div class="d-grid gap-2">
                    <a href="{{ path('admin_categories_new') }}" class="btn btn-outline-primary">
                        <i class="fas fa-plus me-2"></i>Nueva Categoría
                    </a>
                    <a href="{{ path('admin_products_index') }}" class="btn btn-outline-success">
                        <i class="fas fa-box me-2"></i>Ver Productos
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script>
document.addEventListener('DOMContentLoaded', function() {
    // Initialize tooltips
    var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
    var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
        return new bootstrap.Tooltip(tooltipTriggerEl);
    });
    
    // Search functionality
    const searchInput = document.getElementById('searchInput');
    const tableRows = document.querySelectorAll('#categoriesTable tr');
    
    searchInput.addEventListener('input', function() {
        const searchTerm = this.value.toLowerCase();
        
        tableRows.forEach(row => {
            const categoryName = row.dataset.categoryName || '';
            const isVisible = categoryName.includes(searchTerm);
            row.style.display = isVisible ? '' : 'none';
        });
    });
    
    // Auto-hide alerts
    setTimeout(function() {
        const alerts = document.querySelectorAll('.alert-dismissible');
        alerts.forEach(alert => {
            if (alert.querySelector('.btn-close')) {
                alert.querySelector('.btn-close').click();
            }
        });
    }, 5000);
});
</script>
{% endblock %}