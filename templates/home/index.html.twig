{% extends 'base.html.twig' %}

{% block title %}Inicio - SFStore{% endblock %}

{% block body %}
    <!-- Hero Section -->
    <section class="hero-section bg-primary text-white py-5">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6">
                    <h1 class="display-4 fw-bold mb-3">Bienvenido a SFStore</h1>
                    <p class="lead mb-4">Descubre productos increíbles con la mejor calidad y los mejores precios. Tu tienda online de confianza.</p>
                    <a href="#products" class="btn btn-light btn-lg">
                        <i class="fas fa-shopping-bag me-2"></i>Explorar productos
                    </a>
                </div>
                <div class="col-lg-6 text-center">
                    <i class="fas fa-shopping-cart display-1 opacity-50"></i>
                </div>
            </div>
        </div>
    </section>

    <!-- Categories Section -->
    {% if main_categories %}
    <section class="categories-section py-5 bg-light">
        <div class="container">
            <div class="row">
                <div class="col-12 text-center mb-5">
                    <h2 class="h3 fw-bold">Explora nuestras categorías</h2>
                    <p class="text-muted">Encuentra exactamente lo que buscas</p>
                </div>
            </div>
            <div class="row g-4">
                {% for category in main_categories|slice(0, 6) %}
                    <div class="col-lg-4 col-md-6">
                        <div class="card h-100 border-0 shadow-sm category-card">
                            <div class="card-body text-center p-4">
                                {% if category.image %}
                                    <img src="{{ category.image }}" alt="{{ category.name }}" class="img-fluid rounded-circle mb-3" style="width: 80px; height: 80px; object-fit: cover;">
                                {% else %}
                                    <div class="bg-primary rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px;">
                                        <i class="fas fa-tag text-white fa-2x"></i>
                                    </div>
                                {% endif %}
                                <h5 class="card-title">{{ category.name }}</h5>
                                {% if category.description %}
                                    <p class="card-text text-muted">{{ category.description|length > 100 ? category.description|slice(0, 100) ~ '...' : category.description }}</p>
                                {% endif %}
                                <a href="{{ path('category_show', {slug: category.slug}) }}" class="btn btn-outline-primary">
                                    Ver productos <i class="fas fa-arrow-right ms-1"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>
    {% endif %}

    <!-- Featured Products Section -->
    {% if featured_products %}
    <section id="products" class="products-section py-5">
        <div class="container">
            <div class="row">
                <div class="col-12 text-center mb-5">
                    <h2 class="h3 fw-bold">Productos destacados</h2>
                    <p class="text-muted">Los productos más populares de nuestra tienda</p>
                </div>
            </div>
            <div class="row g-4">
                {% for product in featured_products %}
                    <div class="col-xl-3 col-lg-4 col-md-6">
                        <div class="card product-card h-100 border-0 shadow-sm">
                            {% if product.mainImage %}
                                <img src="{{ product.mainImage }}" class="card-img-top" alt="{{ product.name }}">
                            {% else %}
                                <div class="card-img-top d-flex align-items-center justify-content-center bg-light" style="height: 200px;">
                                    <i class="fas fa-image text-muted fa-3x"></i>
                                </div>
                            {% endif %}
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title">{{ product.name }}</h5>
                                <p class="card-text text-muted small flex-grow-1">
                                    {{ product.description|length > 100 ? product.description|slice(0, 100) ~ '...' : product.description }}
                                </p>
                                <div class="mt-auto">
                                    <div class="d-flex justify-content-between align-items-center mb-3">
                                        <span class="product-price">${{ product.price|number_format(0, ',', '.') }}</span>
                                        <small class="text-muted">Stock: {{ product.stock }}</small>
                                    </div>
                                    <div class="d-grid gap-2">
                                        <a href="{{ path('product_show', {slug: product.slug}) }}" class="btn btn-outline-primary btn-sm">
                                            <i class="fas fa-eye me-1"></i>Ver detalles
                                        </a>
                                        {% if product.isAvailable %}
                                            <button class="btn btn-primary btn-sm btn-add-to-cart" data-product-id="{{ product.id }}">
                                                <i class="fas fa-cart-plus me-1"></i>Agregar al carrito
                                            </button>
                                        {% else %}
                                            <button class="btn btn-secondary btn-sm" disabled>
                                                <i class="fas fa-times me-1"></i>Sin stock
                                            </button>
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
            
            {% if featured_products|length >= 8 %}
                <div class="row mt-5">
                    <div class="col-12 text-center">
                        <a href="#" class="btn btn-primary btn-lg">
                            <i class="fas fa-th me-2"></i>Ver todos los productos
                        </a>
                    </div>
                </div>
            {% endif %}
        </div>
    </section>
    {% endif %}

    <!-- Features Section -->
    <section class="features-section py-5 bg-light">
        <div class="container">
            <div class="row g-4">
                <div class="col-lg-3 col-md-6">
                    <div class="text-center">
                        <div class="bg-primary rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px;">
                            <i class="fas fa-shipping-fast text-white fa-lg"></i>
                        </div>
                        <h5>Envío rápido</h5>
                        <p class="text-muted">Envíos seguros y rápidos a todo el país</p>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6">
                    <div class="text-center">
                        <div class="bg-success rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px;">
                            <i class="fas fa-shield-alt text-white fa-lg"></i>
                        </div>
                        <h5>Compra segura</h5>
                        <p class="text-muted">Tus datos y pagos están protegidos</p>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6">
                    <div class="text-center">
                        <div class="bg-warning rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px;">
                            <i class="fas fa-medal text-white fa-lg"></i>
                        </div>
                        <h5>Calidad garantizada</h5>
                        <p class="text-muted">Solo productos de la mejor calidad</p>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6">
                    <div class="text-center">
                        <div class="bg-info rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px;">
                            <i class="fas fa-headset text-white fa-lg"></i>
                        </div>
                        <h5>Soporte 24/7</h5>
                        <p class="text-muted">Atención al cliente siempre disponible</p>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}